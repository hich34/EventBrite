<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-10">
      <h1 class="text-center mt-5"> Create your event ! </h1>
      <div class="d-flex justify-content-center">
        <br>
      </div> <br>
    </div>
    <br>

<div class="container card">
  <br>
 <%= form_tag url_for(action: "create"), method: "post" do %>
      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', new_event.title, class: 'form-control'%>
      <br /> <br />
       <%= label_tag 'Start_date' %>
      <%= text_field_tag 'start_date', new_event.start_date, class: 'form-control'%>
      <br /> <br />
       <%= label_tag 'Duration' %>
      <%= text_field_tag 'duration', new_event.duration, class: 'form-control'%>
      <br /> <br />
       <%= label_tag 'Price' %>
      <%= text_field_tag 'price', new_event.price, class: 'form-control'%>
      <br /> <br />
       <%= label_tag 'Location' %>
      <%= text_field_tag 'location', new_event.location, class: 'form-control'%>
      <br /> <br />

      <%= label_tag 'Description' %>
      <%= text_area_tag 'description', new_event.description, class: 'form-control'%>

      <br /> <br />

      <%= submit_tag "Create Event", class: 'btn btn-primary' %>
  <% end %>
  <br>
</div>